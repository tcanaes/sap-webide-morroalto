<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="com.morroalto.MorroAlto.controller.MaintenanceMenuView" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<subHeader>
					<Toolbar>
						<Button type="Back"/>
						<ToolbarSpacer/>
						<Title text="{i18n>maintenance.menu}" level="H3"/>
						<ToolbarSpacer/>
					</Toolbar>
				</subHeader>				
				<content>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>maintenance.products}"
						press="navToMaintainProducts">
						<TileContent>
							<ImageContent src="sap-icon://product"/>
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>maintenance.sales}"
						press="navToMaintainSales">
						<TileContent>
							<ImageContent src="sap-icon://sales-document"/>
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>maintenance.points}"
						press="navToMaintainPoints">
						<TileContent>
							<ImageContent src="sap-icon://factory"/>
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>maintenance.discards}"
						press="navToMaintainDiscards">
						<TileContent>
							<ImageContent src="sap-icon://inspect-down"/>
						</TileContent>
					</GenericTile>					
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>